<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/nunito_semibold"
        android:padding="5dp"
        android:text="@string/subject_name_subject_code"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sub_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_name"
        android:layout_alignStart="@+id/sub_name"
        android:fontFamily="@font/nunito_semibold"
        android:padding="5dp"
        android:text="@string/subject_teacher"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sub_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/sub_name"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/nunito_semibold"
        android:padding="3dp"
        android:text="50%"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

</RelativeLayout>